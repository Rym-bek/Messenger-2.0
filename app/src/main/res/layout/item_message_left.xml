<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/DefaultTextStyle.Big"
        android:id="@+id/user_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_message_left"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="70dp"
        android:text="bgfbfgbfgbbgfbfgbfggbfbgbffgbgbfgbgfbgfgfb"
        android:padding="11dp"
        />

    <TextView
        style="@style/DefaultTextStyle.Small.Grey"
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="12:20"
        android:layout_marginStart="-65dp"
        android:layout_gravity="bottom"
        />


</LinearLayout>